 #include<iostream>
 using namespace std;
 int secondLargest(int arr[],int n)
{
    for(int i=0;i<n;i++)
    { int minimum=arr[i], minIndex=i;

        for(int j=i+1;j<n;j++)
        {

            if(arr[j]<minimum)
            {

                minimum=arr[j];
                minIndex=j;
            }
        }
        //swap
        int temp=arr[i];
        arr[i]=arr[minIndex];
        arr[minIndex]=temp;


    }
 cout<"The second largest element in the array is"<arr[n-2];

    }


 int main()
 {
     int n;
     int arr[100];
     cout<<"enter the number of elements you want in array";
     cin>>n;
     for(int i=0;i<n;i++)
     {

        cin>>arr[i];
     }

     secondLargest(arr,n);



 }
